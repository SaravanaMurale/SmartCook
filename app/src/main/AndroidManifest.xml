<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.clj.blesample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/preethi_logo"
        android:label="@string/app_name"

        android:supportsRtl="true"
        tools:replace="android:icon,android:theme"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <!--<activity android:name=".CircularActivity"></activity>-->
        <activity android:name=".notificationpackage.NotificationAct" />
        <activity android:name=".menuoperationactivity.NotificationActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".menuoperationactivity.ResetPasswordActivity"
            android:screenOrientation="portrait"
            /> <!-- <activity android:name=".DummyGraphView"></activity> -->
        <activity
            android:name=".menuoperationactivity.GasConsumptionActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".menuoperationactivity.LoginActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".menuoperationactivity.SignUpActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".menuoperationactivity.EditActivity" />
        <activity android:name=".menuoperationactivity.SettingsActivity" />
        <activity android:name=".menuoperationactivity.GetInTouchActivity" />
        <activity android:name=".menuoperationactivity.ProfileSettingsActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".menuoperationactivity.GraphViewActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".menuoperationactivity.GCPDateSelectActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".menuoperationactivity.MenuActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            /> <!-- <activity android:name=".DummyActivity"></activity> -->
        <activity android:name=".menuoperationactivity.SplashScreenActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".operation.OperationActivity"
            android:screenOrientation="portrait"
            />
    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>