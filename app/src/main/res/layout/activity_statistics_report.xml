<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuoperationactivity.StatisticsReportActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/leftBurnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_burner_type"
            android:text="Left Burner"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/centerBurnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_burner_type"
            android:text="Center Burner"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rightBurnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_burner_type"
            android:text="Right Burner"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" />

    </LinearLayout>






</RelativeLayout>