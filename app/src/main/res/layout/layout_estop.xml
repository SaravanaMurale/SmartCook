<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/eStopYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eStopImage"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_button_border_on"
                android:text="YES"
                android:textColor="@color/red"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/eStopNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eStopImage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_button_border_on"
                android:text="NO"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/eStopImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/e1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/e_stop" />

            <TextView
                android:id="@+id/e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Are you sure want to turn off stove?"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>