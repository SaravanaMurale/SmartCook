<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CircularActivity"
    tools:ignore="NamespaceTypo,ResAuto">

   <!--<com.triggertrap.seekarc.SeekArc
       android:id="@+id/seekArc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:startAngle="45"
       seekarc:rotation="180"
       seekarc:max="180"
       app:clockwise="false"
       />-->






    <android.support.v7.widget.CardView
        android:id="@+id/cardViewBlock"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/leftBurner"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:label=""
                app:min="3"
                app:max="18"
                app:indicator_width="15"
                app:indicator_color="@color/blue"
                app:progress_primary_color="@color/blue"
                app:progress_primary_circle_size="4"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="5dp"
                app:main_circle_color="@color/color_grey_ke"
                app:back_circle_color="@color/color_grey_ke"
                app:anticlockwise="true"

                />

            <ImageView
                android:id="@+id/LeftVessel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/leftBurner"
                android:layout_marginLeft="50dp"
                android:src="@drawable/vessel_present"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/leftTimer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/timer"
                android:layout_below="@id/LeftVessel"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"

                />

            <TextView
                android:id="@+id/leftTimerCount"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:text="5min"
                android:layout_below="@id/LeftVessel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="38dp"
                android:textColor="@color/white"
                android:layout_alignBaseline="@id/leftTimer"
                />

            <ImageView
                android:id="@+id/leftWhistle"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:layout_below="@id/LeftVessel"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/whistle"
                />

            <TextView
                android:id="@+id/leftWhistleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/white"
                android:layout_below="@id/LeftVessel"
                android:layout_alignBaseline="@id/leftTimerCount"
                android:layout_marginLeft="110dp"
                />


            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/rightBurner"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="120dp"
                android:layout_marginRight="@dimen/five_dp"
                app:main_circle_color="@color/color_grey_ke"
                app:label=""
                app:min="3"
                app:max="18"
                app:progress_primary_circle_size="4"
                app:anticlockwise="true"
                app:indicator_color="@color/blue"
                />

            <ImageView
                android:id="@+id/rightVessel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rightBurner"
                android:layout_marginRight="50dp"
                android:src="@drawable/vessel_present"
                android:layout_marginTop="@dimen/five_dp"
                />

            <TextView
                android:id="@+id/rightWhistleCount"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:layout_below="@id/rightVessel"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"

                />

            <ImageView
                android:id="@+id/rightWhistle"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:src="@drawable/whistle"
                android:layout_below="@id/rightVessel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/rightTimerCount"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rightVessel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="65dp"
                android:layout_marginTop="5dp"
                android:text="5min"
                android:textColor="@color/white"
                android:layout_alignBaseline="@id/rightWhistleCount"
                />

            <ImageView
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:src="@drawable/timer"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rightVessel"
                android:layout_marginRight="110dp"
                android:layout_marginTop="5dp"
                />
            
            
            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/centerBurner"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                app:label=""
                app:min="3"
                app:max="18"
                app:progress_primary_circle_size="4"
                app:anticlockwise="true"
                />

            <ImageView
                android:id="@+id/centerVessel"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:src="@drawable/vessel_present"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/centerBurner"
                android:layout_marginTop="@dimen/five_dp"
                />

            <TextView
                android:id="@+id/centerTimerCount"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/centerVessel"
                android:layout_centerHorizontal="true"
                android:text="5min"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/centerTimer"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:src="@drawable/timer"
                android:layout_below="@id/centerVessel"
                android:layout_toLeftOf="@id/centerTimerCount"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/five_dp"

                />

            <ImageView
                android:id="@+id/centerWhistle"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:layout_below="@id/centerVessel"
                android:layout_toRightOf="@id/centerTimerCount"
                android:layout_marginLeft="@dimen/five_dp"
                android:src="@drawable/whistle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/white"
                android:layout_below="@id/centerVessel"
                android:layout_toRightOf="@+id/centerWhistle"
                android:layout_alignBaseline="@id/centerTimerCount"
                android:layout_marginLeft="@dimen/five_dp"
                />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>