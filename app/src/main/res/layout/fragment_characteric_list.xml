<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/selectBatteryStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/battery_status"

        />

    <ImageView
        android:id="@+id/selectBluetoothStatus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/selectBatteryStatus"
        android:src="@drawable/bluetooth_status"/>



    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/preethi_logo" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seletedUserProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/selectBatteryStatus"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/selectdUserName"
        android:src="@drawable/person" />

    <ImageView
        android:id="@+id/selectEStop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/seletedUserProfile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/estop" />

    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/seletedUserProfile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/notification" />

    <TextView
        android:id="@+id/menuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:text="Menu"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/seletedUserProfile"
        android:layout_toLeftOf="@+id/notificationIcon"
        />

    <android.support.v7.widget.CardView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seletedUserProfile"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="15dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/red">


        <TextView
            android:id="@+id/notificationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="8dp"

            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/selectdUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectBatteryStatus"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Rajini" />

    <TextView
        android:id="@+id/selectLeft"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewBlock"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_button_border_on"
        android:gravity="center"
        android:padding="6dp"
        android:text="Burner 1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectCenter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_button_border_off"
        android:gravity="center"
        android:padding="6dp"
        android:text="Burner 2"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectRight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewBlock"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_button_border_off"
        android:gravity="center"
        android:padding="6dp"
        android:text="Burner 3"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectFlameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLeft"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Flame Mode"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/selectSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectFlameMode"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_border"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:text="SIM" />

    <TextView
        android:id="@+id/selectHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectFlameMode"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_border"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:text="HIGH"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/selectOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectFlameMode"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_border"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:text="OFF"
        android:textColor="@color/black" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewBlock"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/leftBurner"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/stove_burner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burner1"
                android:layout_marginTop="100dp"
                android:textColor="@color/white"
                android:layout_marginLeft="60dp"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/selectedLeftVessel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/leftBurner"
                android:layout_marginLeft="75dp"
                android:src="@drawable/vessel_present" />



            <ImageView
                android:id="@+id/selectedLeftWhistle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/selectedLeftBurnerText"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/whistle" />

            <ImageView
                android:id="@+id/selectedLeftTimer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/selectedLeftBurnerText"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/timer"

                />

            <TextView
                android:id="@+id/selectedLeftBurnerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedLeftVessel"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:text="Burner1"
                android:visibility="gone"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/selectedLeftTimerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedLeftBurnerText"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white"

                />

            <TextView
                android:id="@+id/selectedLeftWhistleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedLeftBurnerText"
                android:layout_alignBaseline="@id/selectedLeftTimerCount"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/centerBurner"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/stove_burner" />

            <ImageView
                android:id="@+id/selectedCenterVessel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/centerBurner"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vessel_present" />




            <ImageView
                android:id="@+id/selectedCenterWhistle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/selectedCenterTimerCount"
                android:layout_below="@id/selectedCenterVessel"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/whistle"
                />

            <TextView
                android:id="@+id/selectedCenterWhistleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/selectedCenterWhistle"
                android:layout_below="@id/selectedCenterVessel"
                android:text=""
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/selectedCenterTimerCount"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_below="@id/selectedCenterVessel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/selectedCenterWhistleCount"
                />

            <ImageView
                android:id="@+id/selectedCenterTimer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/timer"
                android:layout_below="@id/selectedCenterVessel"
                android:layout_toLeftOf="@id/selectedCenterTimerCount"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/rightBurner"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="120dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/stove_burner" />

            <ImageView
                android:id="@+id/selectedRightVessel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="25"
                android:src="@drawable/vessel_present"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rightBurner"
                />
            <TextView
                android:id="@+id/selectedRightWhistleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_below="@+id/selectedRightVessel"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/selectedRightWhistle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/whistle"
                android:layout_below="@+id/selectedRightVessel"
                android:layout_toLeftOf="@+id/selectedRightWhistleCount"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/selectedRightTimerCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text=""
                android:layout_below="@+id/selectedRightVessel"
                android:layout_toLeftOf="@+id/selectedRightWhistle"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_alignBaseline="@+id/selectedRightWhistleCount"
                />

            <ImageView
                android:id="@+id/selectedRightTimer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/timer"
                android:layout_below="@+id/selectedRightVessel"
                android:layout_toLeftOf="@+id/selectedRightTimerCount"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                />





        </RelativeLayout>


    </android.support.v7.widget.CardView>





    <ListView
        android:id="@+id/list_service_character"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none"
        android:visibility="gone" />






</RelativeLayout>


