<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/leftBurner"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:background="@drawable/vessel_on"
            android:text="B1" />

        <Button
            android:id="@+id/leftBurnerSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/leftBurner"
            android:text="Setting"
            android:visibility="visible" />

        <Button
            android:id="@+id/leftBurnerEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/leftBurner"
            android:text="Edit"
            android:visibility="invisible" />

        <Button
            android:id="@+id/centerBurner"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/leftBurner"
            android:layout_margin="20dp"
            android:background="@drawable/vessel_on"
            android:text="B2" />

        <Button
            android:id="@+id/centerBurnerSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurnerSettings"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/centerBurner"
            android:text="Setting"
            android:visibility="visible" />


        <Button
            android:id="@+id/centerBurnerEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leftBurnerEdit"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/centerBurner"
            android:text="Edit"
            android:visibility="invisible" />

        <Button
            android:id="@+id/rightBurner"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/centerBurner"
            android:layout_margin="20dp"
            android:background="@drawable/vessel_on"
            android:text="B3" />


        <Button
            android:id="@+id/rightBurnerSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerBurnerSettings"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/rightBurner"
            android:text="Setting"
            android:visibility="visible" />

        <Button
            android:id="@+id/rightBurnerEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerBurnerEdit"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/rightBurner"
            android:text="Edit"
            android:visibility="invisible" />


        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@color/black"
            android:src="@drawable/menu" />

        <ListView
            android:id="@+id/list_service_character"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="none"
            android:visibility="gone" />

        <TextView
            android:id="@+id/leftvesselStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/leftBurner"
            android:text="Vessel Deteced"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/centervesselStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurner"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/centerBurner"
            android:text="Vessel Deteced"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rightVesselStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerBurner"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/centerBurner"
            android:text="Vessel Deteced"
            android:visibility="invisible" />


    </RelativeLayout>


</ScrollView>