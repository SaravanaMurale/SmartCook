<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/selectBatteryStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/battery_status"

        />

    <ImageView
        android:id="@+id/selectBluetoothStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/selectBatteryStatus"
        android:src="@drawable/blue_bluetooth" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/preethi_logo" />

    <ImageView
        android:id="@+id/selectEStop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/seletedUserProfile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/estop" />

    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/seletedUserProfile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/notification" />

    <ListView
        android:id="@+id/list_service_character"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none"
        android:visibility="gone" />

    <TextView
        android:id="@+id/menuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seletedUserProfile"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/notificationIcon"
        android:background="@drawable/button_border"
        android:padding="8dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Menu"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectdUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectBatteryStatus"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Rajini" />


    <android.support.v7.widget.CardView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/seletedUserProfile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="15dp">


        <TextView
            android:id="@+id/notificationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="15dp"

            />

    </android.support.v7.widget.CardView>

