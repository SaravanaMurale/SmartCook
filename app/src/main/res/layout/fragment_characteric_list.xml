<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:src="@drawable/menu" />


    <ListView
        android:id="@+id/list_service_character"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerBurnerBlock"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/rightBurner"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"

                android:text="B3" />

            <Button
                android:id="@+id/rightBurnerSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border"
                android:text="Setting"
                android:textColor="@color/gold"
                android:visibility="visible" />

            <Button
                android:id="@+id/rightBurnerEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border"
                android:text="Edit"
                android:textColor="@color/gold"
                android:visibility="invisible" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/leftBurnerBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/leftBurner"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:text="15 "
                android:textColor="@color/black" />


            <Button
                android:id="@+id/leftBurnerSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border"
                android:text="Setting"
                android:textColor="@color/gold"
                android:visibility="visible" />

            <Button
                android:id="@+id/leftBurnerEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border"
                android:text="Edit"
                android:textColor="@color/gold"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/centerBurnerBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurnerBlock"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/centerBurner"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"

                android:text="B2" />

            <Button
                android:id="@+id/centerBurnerSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border"
                android:text="Setting"
                android:textColor="@color/gold"
                android:visibility="visible" />

            <Button
                android:id="@+id/centerBurnerEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border"
                android:text="Edit"
                android:textColor="@color/gold"
                android:visibility="invisible" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>