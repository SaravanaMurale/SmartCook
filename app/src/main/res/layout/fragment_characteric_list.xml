<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/list_service"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="none"
            android:visibility="gone" />

        <Button
            android:id="@+id/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Notify" />

        <Button
            android:id="@+id/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Write" />

        <TextView
            android:id="@+id/show_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Showing Received Data From Stove" />

        <TextView
            android:id="@+id/show_received_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/edit_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="send data to stove"

            />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Send" />

        <TextView
            android:id="@+id/user_entered_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            />

    </LinearLayout>


    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/menu" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/menuIcon"
        android:src="@drawable/maintanence"

        />


    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/burnerTop"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:anticlockwise="true"
        app:back_circle_color="#EDEDED"


        app:indicator_color="#000000"
        app:indicator_width="15"

        app:is_continuous="true"

        app:label="Burner 1"

        app:label_color="@color/red"
        app:label_size="20"

        app:main_circle_color="#EDEDED"
        app:max="180"
        app:min="0"

        app:progress_primary_color="#000000"
        app:progress_secondary_color="#EEEEEE"

        app:start_offset="45" />


    <TextView
        android:id="@+id/dummyTextView_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/burnerTop"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/knobRound"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/knob" />


    <TextView
        android:id="@+id/topBurnerKnobAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="0"

        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/topBurner_whistle_img"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_below="@id/burnerTop"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/dummyTextView_"
        android:enabled="false"
        android:src="@drawable/whistle_orange"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/topBurner_Whistle_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/burnerTop"
        android:layout_alignBaseline="@+id/topBurner_whistle_img"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/topBurner_whistle_img"
        android:enabled="false"
        android:text="0"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/top_Burner_Vessel"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_below="@+id/burnerTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/dummyTextView_"
        android:saveEnabled="false"
        android:src="@drawable/vessel_orange"
        android:visibility="invisible"

        />


    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/burnerLeft"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        app:anticlockwise="true"
        app:back_circle_color="#EDEDED"
        app:indicator_color="#0B3C49"
        app:indicator_width="10"
        app:is_continuous="true"
        app:label="Burner 2"
        app:label_color="#76ff03"
        app:label_size="20"
        app:main_circle_color="#ffffff"

        app:max="180"
        app:min="0"
        app:progress_primary_color="#0B3C49"

        app:progress_secondary_color="#EEEEEE"
        app:start_offset="45" />

    <ImageView
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="138dp"
        android:src="@drawable/knob"


        />

    <TextView
        android:id="@+id/leftBurnerKnobAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="225dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/leftBurner_Vessel"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:src="@drawable/vessel_orange"
        android:visibility="gone"
         />

    <ImageView
        android:id="@+id/leftBurner_Whistle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/leftBurner_Vessel"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/leftBurner_Vessel"
        android:src="@drawable/whistle_orange"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/leftBurner_Whistle_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/leftBurner_Whistle"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/leftBurner_Whistle"
        android:text="5"
        android:visibility="gone" />


    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/burnerRight"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginRight="15dp"
        app:anticlockwise="true"
        app:back_circle_color="#EDEDED"
        app:indicator_color="#0B3C49"
        app:indicator_width="10"
        app:is_continuous="true"
        app:label="Burner 3"
        app:label_color="#2962ff"
        app:label_size="20"
        app:main_circle_color="#ffffff"
        app:max="180"
        app:min="0"
        app:progress_primary_color="#0B3C49"
        app:progress_secondary_color="#EEEEEE"
        app:start_offset="45" />

    <ImageView
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="138dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/knob"


        />

    <TextView
        android:id="@+id/rightBurnerKnobAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="225dp"
        android:layout_marginRight="120dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/rightBurner_Whistle_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="70dp"
        android:text="0"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/rightBurner_Whistle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/rightBurner_Whistle_Count"
        android:src="@drawable/whistle_orange"
        android:visibility="gone"
         />

    <ImageView
        android:id="@+id/rightBurnerVess_"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/rightBurner_Whistle"
        android:src="@drawable/vessel_orange"
        android:visibility="gone"
         />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/preethi_logo" />


</RelativeLayout>