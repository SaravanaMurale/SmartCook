<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifyRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Vessel is placed in Burner1" />

        <TextView
            android:id="@+id/notifyRightWhistle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Right Whistle Placed"

            />

        <TextView
            android:id="@+id/notifyRightTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Right Timer Placed"

            />

        <TextView
            android:id="@+id/notifyLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Vessel is placed in Burner1" />

        <TextView
            android:id="@+id/notifyLeftWhistle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Right Whistle Placed"

            />

        <TextView
            android:id="@+id/notifyLeftTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Right Timer Placed"

            />


        <TextView
            android:id="@+id/notifyCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Vessel is placed in Burner1" />

        <TextView
            android:id="@+id/notifyCenterWhistle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Right Whistle Placed"

            />

        <TextView
            android:id="@+id/notifyCenterTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Right Timer Placed"

            />

    </LinearLayout>

</RelativeLayout>