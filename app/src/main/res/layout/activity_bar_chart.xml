<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".menuoperationactivity.GCPDateSelectActivity">

    <Spinner
        android:id="@+id/burnerSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_border"
        android:padding="15dp" />

    <TextView
        android:id="@+id/fromText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/burnerSpinner"
        android:layout_margin="10dp"
        android:text="From"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/fromDate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/fromText"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:padding="5dp" />

    <TextView
        android:id="@+id/toText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/burnerSpinner"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="TO"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/toDate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/toText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/fromDate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_button_border_on"
        android:textColor="@color/red"
        android:fontFamily="sans-serif-condensed"

        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fromDate"
        android:layout_margin="50dp"
        android:visibility="gone"></com.github.mikephil.charting.charts.LineChart>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fromDate"
        android:layout_margin="50dp"
        android:visibility="gone"
        />

</RelativeLayout>