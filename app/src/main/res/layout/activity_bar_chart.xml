<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuoperationactivity.GCPDateSelectActivity">

    <ImageView
        android:id="@+id/preethiLogoGSP"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/preethi_logo" />

    <Spinner
        android:id="@+id/burnerSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/preethiLogoGSP"
        android:background="@drawable/rounded_border"
        android:padding="15dp" />

    <TextView
        android:id="@+id/fromText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/burnerSpinner"
        android:layout_margin="10dp"
        android:text="From"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/fromDate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/fromText"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:padding="10dp" />

    <TextView
        android:id="@+id/toText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/burnerSpinner"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="TO"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/toDate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/toText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/fromDate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_button_border_on"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />


</RelativeLayout>