<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuoperationactivity.EditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">


        <Button
            android:id="@+id/leftBurnerOperation"
            android:layout_width="110dp"
            android:layout_height="200dp"
            android:layout_below="@id/burnerSettingsText"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/vessel_on"
            android:text="B1" />

        <Button
            android:id="@+id/centerBurnerOperation"
            android:layout_width="110dp"
            android:layout_height="200dp"
            android:layout_below="@id/burnerSettingsText"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/not_in_use"
            android:text="B2" />

        <Button
            android:id="@+id/rightBurnerOperation"
            android:layout_width="110dp"
            android:layout_height="200dp"
            android:layout_below="@id/burnerSettingsText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/vessel_off"
            android:text="B3" />

        <TextView
            android:id="@+id/burnerSettingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Burner Settings" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurnerOperation"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="Timer"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/whistleText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurnerOperation"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="Whistle Count"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/sub"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerText"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whistleText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="15 minutes"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/whistle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="2 minutes"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/flamMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub"
            android:layout_marginTop="20dp"
            android:text="Flame Mode" />

        <TextView
            android:id="@+id/sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flamMode"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:padding="20dp"
            android:text="SIM"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flamMode"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:padding="20dp"
            android:text="HIGH"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flamMode"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:padding="20dp"
            android:text="OFF"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>

</RelativeLayout>