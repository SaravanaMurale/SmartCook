<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_black_bg"
    android:orientation="vertical"
    tools:context=".menuoperationactivity.EditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">


        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sim"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="Cancel"
            android:visibility="gone" />


        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sim"

            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:text="Start" />

        <TextView
            android:id="@+id/burnerSettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Burner Settings"
            android:textColor="@color/red"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/timerText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurnerEditRipple"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="Timer"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/whistleText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftBurnerEditRipple"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="Whistle"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sub"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerText"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whistleText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="15"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/whistle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="2"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/flamMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub"
            android:layout_marginTop="20dp"
            android:text="Flame Mode"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flamMode"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:padding="20dp"
            android:text="SIM"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flamMode"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:padding="20dp"
            android:text="HIGH"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flamMode"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_border"
            android:padding="20dp"
            android:text="OFF"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.skyfishjy.library.RippleBackground
            android:id="@+id/leftBurnerEditRipple"
            android:layout_width="120dp"
            android:layout_height="210dp"
            android:layout_below="@id/burnerSettingsText"
            app:rb_color="#4792f4"
            app:rb_radius="19dp"
            app:rb_rippleAmount="5"
            app:rb_scale="6">

            <Button
                android:id="@+id/leftBurnerOperation"
                android:layout_width="110dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/burner_vessel_on"
                android:text="B1" />

        </com.skyfishjy.library.RippleBackground>

        <com.skyfishjy.library.RippleBackground
            android:id="@+id/centerBurnerEditRipple"
            android:layout_width="120dp"
            android:layout_height="210dp"
            android:layout_below="@id/burnerSettingsText"
            android:layout_centerHorizontal="true"
            app:rb_color="#4792f4"
            app:rb_radius="19dp"
            app:rb_rippleAmount="5"
            app:rb_scale="6"
            >

            <Button
                android:id="@+id/centerBurnerOperation"
                android:layout_width="110dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/not_in_use"
                android:text="B2" />

        </com.skyfishjy.library.RippleBackground>

        <com.skyfishjy.library.RippleBackground
            android:id="@+id/rightBurnerEditRipple"
            android:layout_width="120dp"
            android:layout_height="210dp"
            android:layout_below="@id/burnerSettingsText"
            android:layout_alignParentRight="true"
            app:rb_color="#4792f4"
            app:rb_radius="19dp"
            app:rb_rippleAmount="5"
            app:rb_scale="6"
            >

            <Button
                android:id="@+id/rightBurnerOperation"
                android:layout_width="110dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@drawable/burner_on_vessel_off"
                android:text="B3" />

        </com.skyfishjy.library.RippleBackground>


    </RelativeLayout>

</RelativeLayout>